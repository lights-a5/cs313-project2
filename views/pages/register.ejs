<body>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-5 col-md-3">
                <div class="form-login">
                <h4>Register to leave reviews!</h4>
                <input type="text" id="username" class="form-control input-sm chat-input" placeholder="username" />
                </br>
                <input type="password" id="userpassword" class="form-control input-sm chat-input" placeholder="password" />
                </br>
                <input type="email" id="useremail" class="form-control input-sm chat-input" placeholder="email" />
                </br>
                <input type="text" id="firstname" class="form-control input-sm chat-input" placeholder="first name" />
                </br>
                <input type="text" id="lastname" class="form-control input-sm chat-input" placeholder="last name" />
                </br>
                <div class="wrapper">
                <span class="group-btn">     
                    <a href="#" onclick="submit_register();" class="btn btn-primary btn-md">Register <i class="fa fa-sign-in"></i></a>
                </span>
                </div>
                </div>
            
            </div>
        </div>
    </div>
